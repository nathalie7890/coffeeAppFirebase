<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoky"
    android:paddingHorizontal="16dp"
    android:paddingBottom="8dp"
    tools:context=".ui.drink.DrinksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/search"
                android:visibility="visible"
                layout="@layout/item_layout_search" />
        </LinearLayout>


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/btn_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:layout_marginBottom="8dp"
            app:justifyContent="space_between">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/chestnut"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/almond"
                app:cornerRadius="50dp"
                app:elevation="16dp"
                app:layout_flexBasisPercent="32%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige"
                android:text="Classic"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:textColor="@color/smoky"
                app:cornerRadius="50dp"
                app:layout_flexBasisPercent="32%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/beige"
                android:text="Non Classic"
                android:textAllCaps="false"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/smoky"
                app:cornerRadius="50dp"
                app:layout_flexBasisPercent="32%" />
        </com.google.android.flexbox.FlexboxLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srlRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDrinks"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="120dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:weightSum="2"
                    android:layout_marginVertical="8dp"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFav"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:cornerRadius="50dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/beige"
                        android:textColor="@color/chocolate"
                        android:text="Favorites" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAdd"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:cornerRadius="50dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/chestnut"
                        android:text="Add Drink" />
                </LinearLayout>

            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>