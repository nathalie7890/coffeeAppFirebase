<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almond"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    tools:context=".ui.DrinksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Coffee"
            android:textColor="@color/charcoal"
            android:textSize="25sp" />

        <include
            android:id="@+id/search"
            layout="@layout/item_layout_search" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="space_between">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/sand"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="50dp"
                app:layout_flexBasisPercent="32%" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/suede"
                android:text="Hot"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="50dp"
                app:layout_flexBasisPercent="32%" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/suede"
                android:text="Cold "
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="50dp"
                app:layout_flexBasisPercent="32%" />
        </com.google.android.flexbox.FlexboxLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDrinks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="120dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>